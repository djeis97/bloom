(in-package :bloom)

(defun enable-logging (core)
  (let* ((project (project core))
         (error-file (resolve-path :log (option project :log-file-error)))
         (debug-file (resolve-path :log (option project :log-file-debug))))
    (uiop:ensure-all-directories-exist (list error-file debug-file))
    (unless (v:thread v:*global-controller*)
      (v:start v:*global-controller*))
    (setf v:*process-locally* (option project :release))
    (when (option project :log-repl-enable)
      (setf (v:repl-level) (if (option project :debug) :debug :info)
            (v:repl-categories) (option project :log-repl-categories)))
    (when (option project :log-file-enable)
      (v:define-pipe ()
        (v:level-filter :level :debug)
        (v:file-faucet :file debug-file))
      (v:define-pipe ()
        (v:level-filter :level :error)
        (v:file-faucet :file error-file)))))
